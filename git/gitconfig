# vim:ft=gitconfig

[user]
    name = Roman Peshkov
    email = peshkovroman@gmail.com

[include]
    path = .gitconfig_local

[advice]
    statusHints = false

[alias]
    aa = add .
    ci = commit
    b = branch -vv
    bd = branch -d
    bdd = branch -D
    d = diff
    dt = difftool
    dw = diff --word-diff=color
    co = checkout
    col = checkout
    cob = checkout -b
    st = status -b
    for = fetch origin
    fup = fetch upstream
    branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
    lg = log --graph --color=always --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cd) %C(bold blue)<%an>%Creset' --abbrev-commit
    amend = commit --amend
    poh = push -u origin HEAD
    tags = tag -l -n2
    remotes = remote -v
    patch = !git --no-pager diff --no-color
    feature = "!git checkout -b $1 develop #"
    stat = !git diff --stat $(git merge-base HEAD $REVIEW_BASE)
    files = !git diff --name-only $(git merge-base HEAD $REVIEW_BASE)
    out = log --pretty=oneline --abbrev-commit --graph @{u}..
    wt = worktree
    skipwt = update-index --skip-worktree
    hres = reset --hard HEAD
    pr = !gh pr create -w

[status]
    showUntrackedFiles = all
    short = true

[core]
    editor = nvim
    excludesfile = "~/.gitignore_global"
    pager = diff-so-fancy | less

[log]
    date = short

[pull]
    rebase = false


[color]
    ui = auto

[grep]
    lineNumber = true

[fetch]
    prune = true

[blame]
    date = short

[url "git@github.com:rpeshkov/"]
    insteadOf = rp:

[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = "code -n -w $MERGED"

[diff]
    tool = vscode
[difftool]
    prompt = false
[difftool "vscode"]
    cmd = "code -n -w -d $LOCAL $REMOTE"
