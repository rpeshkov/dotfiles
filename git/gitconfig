[include]
    path = .gitconfig_local

[advice]
    statusHints = false

[alias]
    aa = add .
    ci = commit
    b = branch -vv
    d = diff
    dt = difftool
    dw = diff --word-diff=color
    co = checkout
    col = checkout
    cob = checkout -b
    st = status -b
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    amend = commit --amend
    poh = push origin HEAD
    tags = tag -l -n2
    remotes = remote -v
    patch = !git --no-pager diff --no-color
    feature = "!git checkout -b $1 develop #"

[status]
    showUntrackedFiles = all
    short = true

[core]
    editor = nvim

[log]
    date = short

[color]
    ui = auto

[grep]
    lineNumber = true

[fetch]
    prune = true

[blame]
    date = short

[core]
    pager = diff-so-fancy | less

[url "git@github.com:rpeshkov/"]
    insteadOf = rp:

[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = "code -n -w $MERGED"

[diff]
    tool = vscode
[difftool]
    prompt = false
[difftool "vscode"]
    cmd = "code -n -w -d $LOCAL $REMOTE"
