    email = peshkovroman@gmail.com
    signingkey = 58B21D54025629C2F8D34CCD66894257D626F7F5

[advice]
    statusHints = false

[alias]
    aa = add .
    ci = commit
    b = branch -vv
    d = diff
    dt = difftool
    dw = diff --word-diff=color
    co = checkout
    cob = checkout -b
    st = status -b
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    amend = commit --amend
    poh = push origin HEAD

[status]
    showUntrackedFiles = all
    short = true

[core]
    editor = nvim

[diff]
    tool = vimdiff

[log]
    date = short

[color]
    ui = auto

[difftool]
    prompt = false

[grep]
    lineNumber = true

[fetch]
    prune = true

[blame]
    date = short
