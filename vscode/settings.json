{
//#region Editor
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 14,
    "editor.lineHeight": 24,
    "editor.folding": false,
    "editor.fontLigatures": true,

    "editor.codeLens": true,
    "editor.cursorBlinking": "solid",
    "editor.renderLineHighlight": "all",
    "editor.renderIndentGuides": false,
    "editor.renderWhitespace": "none",
    "editor.rulers": [100],
    "editor.minimap.enabled": false,
    "editor.overviewRulerBorder": false,
    "editor.dragAndDrop": false,
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.parameterHints.cycle": true,
    "editor.wordBasedSuggestions": false,
//#endregion
//#region Workbench
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.activityBar.visible": false,
    "workbench.statusBar.feedback.visible": false,
    "workbench.tips.enabled": false,
    "workbench.commandPalette.history": 5,
    "workbench.startupEditor": "newUntitledFile",

    "workbench.settings.editor": "json",
    "workbench.settings.openDefaultSettings": false,
    "workbench.settings.openDefaultKeybindings": false,

    "workbench.iconTheme": "ayu",
    "workbench.colorTheme": "Ayu Mirage",
    "workbench.tree.indent": 16,
//#endregion
//#region Window
    "window.newWindowDimensions": "maximized",
//#endregion
//#region Files
    "files.defaultLanguage": "markdown",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/bower_components/**": true,
        "**/out": true
    },

//#endregion
//#region File explorer
    "explorer.openEditors.visible": 0,
    "explorer.decorations.badges": true,
    "explorer.decorations.colors": true,
//#endregion
//#region Search
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/out": true,
        "Cargo.lock": true,
    },
    "search.smartCase": true,
    "search.runInExtensionHost": true,
    "search.showLineNumbers": true,
//#endregion
//#region Diff & SCM
    "git.enableSmartCommit": true,
    "scm.diffDecorations": "none",
    "diffEditor.renderSideBySide": false,
//#endregion
//#region Terminal
    "terminal.integrated.macOptionIsMeta": true,
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.showExitAlert": false,
    "terminal.integrated.fontWeightBold": "500",
//#endregion
//#region Problems View
    "problems.decorations.enabled": false,
//#endregion
//#region Debug
    "debug.toolBarLocation": "docked",
//#endregion

//#region Language specific
//#region Markdown
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.quickSuggestions": false,
        "editor.wordBasedSuggestions": true,
        "editor.wordWrapColumn": 80,
        "editor.rulers": [ 80 ],
        "editor.tabSize": 2
    },
//#endregion
//#region TypeScript
    "typescript.preferences.quoteStyle": "single",
//#endregion

//#region Go
    "go.useLanguageServer": true,
//#endregion
//#endregion

//#region Plugins
//#region Text tables
    "text-tables.mode": "markdown",
//#endregion

//#region Center Editor Window
    "center-editor-window.threeStateToggle": true,
//#endregion

//#region REST client
    "rest-client.fontSize": 12
//#endregion
//#endregion
}
