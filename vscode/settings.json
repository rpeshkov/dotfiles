{
  // Editor
  "editor.fontFamily": "Rec Mono Linear, JetBrains Mono",
  "editor.fontSize": 12,
  "editor.lineHeight": 16,
  "editor.folding": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 5,
  "editor.renderIndentGuides": false,
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.dragAndDrop": false,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.tabCompletion": "onlySnippets",
  "editor.parameterHints.cycle": true,
  "editor.wordBasedSuggestions": false,
  "editor.renderLineHighlight": "all",
  "editor.glyphMargin": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.matchBrackets": "near",

  // Breadcrumbs
  "breadcrumbs.enabled": false,

  // Workbench
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.activityBar.visible": false,
  "workbench.tips.enabled": false,
  "workbench.commandPalette.history": 5,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",
  "workbench.editor.tabCloseButton": "off",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 16,
  "workbench.editor.showTabs": false,
  "workbench.panel.opensMaximized": "preserve",
  "workbench.colorTheme": "GitHub Light",
  "workbench.iconTheme": "ayu",

  // Window
  "window.newWindowDimensions": "maximized",

  // Files
  "files.defaultLanguage": "markdown",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/bower_components/**": true,
    "**/out": true
  },
  "files.simpleDialog.enable": true,

  // File explorer
  "explorer.autoReveal": false,
  "explorer.decorations.badges": true,

  // Search
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/out": true,
    "**/target": true,
    "Cargo.lock": true,
    "package-lock.json": true
  },
  "search.smartCase": true,
  "search.showLineNumbers": true,
  "search.searchEditor.doubleClickBehaviour": "openLocationToSide",

  // Diff & SCM
  "git.enableSmartCommit": true,
  "scm.diffDecorations": "none",
  "diffEditor.renderSideBySide": false,

  // Terminal
  "terminal.integrated.macOptionIsMeta": true,

  // Problems View
  "problems.decorations.enabled": true,

  // Debug
  "debug.toolBarLocation": "docked",

  // Markdown
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.quickSuggestions": false,
    "editor.wordBasedSuggestions": true,
    "editor.wordWrapColumn": 120,
    "editor.tabSize": 2
  },

  // TypeScript
  "typescript.preferences.quoteStyle": "single",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JavaScript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // HTML
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Go
  "go.useLanguageServer": true,

  // Text tables
  "text-tables.mode": "markdown",

  // REST client
  "rest-client.fontSize": 12,

  // Spellright
  "spellright.ignoreRegExps": [
    "/BEGIN PGP[^]*?END PGP/gm"
  ],
  "spellright.language": [
    "en",
    "ru"
  ],
  "spellright.documentTypes": [
    "markdown",
    "latex"
  ],

  // Insert Date String
  "insertDateString.format": "YYYYMMDDhhmmss",
}
